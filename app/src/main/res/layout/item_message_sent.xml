<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/space_sm"
	android:layout_marginEnd="@dimen/space_xs"
	android:id="@+id/message_wrapper"
	android:background="@drawable/message_background_selector"
	android:focusable="true"
	android:clickable="true">

	<ImageView
		android:id="@+id/bubble_tail"
		android:layout_width="@dimen/space_xl"
		android:layout_height="@dimen/space_xl"
		android:src="@drawable/bubble_tail_right"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

	<LinearLayout
		android:id="@+id/message_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/bg_message_sent"
		android:paddingHorizontal="@dimen/space_md"
		android:paddingVertical="12dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent">

		<TextView
			android:id="@+id/message_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/messageSentText"
			android:textSize="@dimen/text_size_body"
			android:layout_gravity="end"
			tools:text="Yes, everything's fine!"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="4dp"
			android:layout_gravity="end">

			<TextView
				android:id="@+id/message_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/messageSentText"
				android:textSize="@dimen/text_size_small"
				tools:text="14:36"/>

			<ImageView
				android:id="@+id/message_status"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_marginStart="6dp"
				android:src="@drawable/ic_message_status_pending"
				android:contentDescription="@string/message_status" />
		</LinearLayout>

	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
