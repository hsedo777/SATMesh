<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Widget.SATMesh.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
		<item name="android:textColorHint">@color/on_primary</item>
		<item name="hintTextColor">@color/on_primary_hint</item>
		<item name="counterTextColor">@color/on_primary</item>
		<item name="boxStrokeColor">@color/secondary</item>
		<item name="boxStrokeWidthFocused">2dp</item>
		<item name="boxStrokeWidth">1dp</item>
		<item name="boxCornerRadiusTopStart">8dp</item>
		<item name="boxCornerRadiusTopEnd">8dp</item>
		<item name="boxCornerRadiusBottomStart">8dp</item>
		<item name="boxCornerRadiusBottomEnd">8dp</item>
	</style>

	<style name="Widget.SATMesh.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
		<item name="android:textColor">@color/on_primary</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
	</style>

	<style name="Widget.SATMesh.Button" parent="Widget.Material3.Button">
		<item name="backgroundTint">@color/button_background_tint</item>
		<item name="android:textColor">@color/button_text_color</item>
		<item name="cornerRadius">32dp</item>
		<item name="elevation">4dp</item>
	</style>

	<style name="Widget.SATMesh.TextInputLayout.Message" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
		<item name="android:textColorHint">@color/on_secondary</item>
		<item name="boxStrokeColor">@color/on_secondary</item>
		<item name="boxBackgroundColor">@color/secondary</item>
		<item name="boxBackgroundMode">filled</item>
		<item name="boxCornerRadiusTopStart">12dp</item>
		<item name="boxCornerRadiusTopEnd">12dp</item>
		<item name="boxCornerRadiusBottomStart">12dp</item>
		<item name="boxCornerRadiusBottomEnd">12dp</item>
		<item name="boxStrokeWidth">1dp</item>
		<item name="boxStrokeWidthFocused">2dp</item>
		<item name="android:padding">4dp</item>
	</style>

	<!-- About alert dialog -->
	<style name="AlertDialog.SATMesh" parent="ThemeOverlay.Material3.MaterialAlertDialog">
		<item name="android:background">@color/dialog_background</item>
		<item name="materialAlertDialogTitleIconStyle">@style/AlertDialog.SATMesh.TitleIconStyle
		</item>

		<item name="android:textColorAlertDialogListItem">@color/dialog_text</item>
		<item name="android:textColor">@color/dialog_text</item>
		<item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.SATMesh.TitleTextStyle
		</item>

		<item name="buttonBarPositiveButtonStyle">@style/AlertDialog.SATMesh.PositiveButton</item>
		<item name="buttonBarNegativeButtonStyle">@style/AlertDialog.SATMesh.NegativeButton</item>
		<item name="buttonBarNeutralButtonStyle">@style/AlertDialog.SATMesh.NeutralButton</item>
	</style>

	<style name="AlertDialog.SATMesh.TitleTextStyle" parent="MaterialAlertDialog.Material3.Title.Text">
		<item name="android:textColor">@color/dialog_title</item>
	</style>

	<style name="AlertDialog.SATMesh.TitleIconStyle" parent="MaterialAlertDialog.Material3.Title.Icon">
		<item name="tint">@color/dialog_title_icon</item>
	</style>

	<style name="AlertDialog.SATMesh.PositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
		<item name="android:textColor">@color/dialog_text</item>
	</style>

	<style name="AlertDialog.SATMesh.NegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
		<item name="android:textColor">@color/negative_dialog_button</item>
	</style>

	<style name="AlertDialog.SATMesh.NeutralButton" parent="Widget.Material3.Button.TextButton.Dialog">
		<item name="android:textColor">@color/neutral_dialog_button</item>
	</style>

	<style name="TextAppearance.App.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/toolbar_title</item>
	</style>

	<style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
		<item name="android:background">@color/toolbar_background</item>
		<item name="titleTextAppearance">@style/TextAppearance.App.Toolbar.Title</item>
		<item name="subtitleTextColor">@color/toolbar_subtitle</item>
		<item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
	</style>

	<style name="ThemeOverlay.App.Toolbar" parent="">
		<item name="colorControlNormal">@color/toolbar_title</item>
	</style>
</resources>