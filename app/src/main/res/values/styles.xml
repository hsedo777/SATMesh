<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Widget.SATMesh.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
		<item name="android:textColorHint">@color/colorOnPrimary</item>
		<item name="hintTextColor">@color/colorOnPrimaryHint</item>
		<item name="counterTextColor">@color/colorOnPrimary</item>
		<item name="boxStrokeColor">@color/secondaryColor</item>
		<item name="boxStrokeWidth">1dp</item>
		<item name="boxCornerRadiusTopStart">8dp</item>
		<item name="boxCornerRadiusTopEnd">8dp</item>
		<item name="boxCornerRadiusBottomStart">8dp</item>
		<item name="boxCornerRadiusBottomEnd">8dp</item>
	</style>

	<style name="Widget.SATMesh.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
		<item name="android:textColor">@color/colorOnPrimary</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
	</style>

	<style name="Widget.SATMesh.TextInputEditText.Home" parent="Widget.SATMesh.TextInputEditText">
	</style>

	<style name="Widget.SATMesh.Button" parent="Widget.Material3.Button">
		<item name="backgroundTint">@color/button_background_tint</item>
		<item name="android:textColor">@color/button_text_color</item>
		<item name="cornerRadius">32dp</item>
		<item name="elevation">4dp</item>
	</style>

	<style name="Widget.SATMesh.TextInputLayout.Message" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
		<item name="android:textColorHint">@color/colorOnSecondary</item>
		<item name="boxStrokeColor">@color/colorOnSecondary</item>
		<item name="boxBackgroundColor">@color/secondaryColor</item>
		<item name="boxBackgroundMode">filled</item>
		<item name="boxCornerRadiusTopStart">12dp</item>
		<item name="boxCornerRadiusTopEnd">12dp</item>
		<item name="boxCornerRadiusBottomStart">12dp</item>
		<item name="boxCornerRadiusBottomEnd">12dp</item>
		<item name="boxStrokeWidth">1dp</item>
		<item name="boxStrokeWidthFocused">2dp</item>
		<item name="android:padding">4dp</item>
	</style>
</resources>